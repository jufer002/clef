<p id="notice"><%= notice %></p>
<div class="center jumbotron">
  <h1><%= @user.username %></h1>
  <h2>
    <%= @user.email %>
  </h2>
  <br />
</div>
<div class="user-lessons container-fluid">
  <h3 class="center">
    <%= @user.username %>'s lessons
  </h3>
  <hr>
  <ul>
    <% @user.lessons.each do |lesson| %>
      <li>
        <%= render :partial => "layouts/lesson_partial", :locals => { :lesson => lesson } %>
      </li>
    <% end %>
  </ul>
</div>
<div class="user-lessons container-fluid">
  <h3 class="center">
    <%= @user.username %>'s progress on courses
    <%= @test_value %>
  </h3>
  <hr>
  <ul>
    <% @courses_with_progress.each do |course| %>
      <li>
        <% outputLine = "Course: " + course.title %>
        <%= link_to outputLine, course, class: "btn option-btn" %>
        Progress: <%= @progress_in_courses[course] %>
        <div class="progress">
          <div class="progress-bar bg-success" role="progressbar" aria-valuenow="70"
  aria-valuemin="0" aria-valuemax="100" style="width:<%= @progress_in_courses[course] * 100 %>%">
            Progress: <%= (@progress_in_courses[course] * 10000).to_i / 100.0 %> %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
