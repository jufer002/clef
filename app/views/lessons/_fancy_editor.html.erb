<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_with model: @lesson, local: true do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      <br/>
      <%= f.label :body %>
      <%= f.rich_text_area :rich_text %>

      <%= f.submit "Publish", class: "btn form-btn" %> 
    <% end %>
  </div>
</div>
