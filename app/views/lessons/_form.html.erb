<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_with model: @lesson, local: true do |f| %>
      <%= render 'shared/lesson_error_messages' %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :body %>
      <%= f.text_area :body, size: "60x12", class: 'form-control' %>


      <% if defined?(lesson_section) %>
        <%= hidden_field_tag(:section_id, lesson_section) %>
      <% else %>
        <%= hidden_field_tag(:section_id, -1) %>
      <% end %>

      <%= f.submit "Publish", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
