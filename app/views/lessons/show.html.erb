<p id="notice"><%= notice %></p>

<script src="/js/show.js.erb"></script>

<h2 class="center"><%= @lesson.title %></h2>

<div class="center lesson-show-head">
  <h4>
    <p>by <button id="user-button"><%= @lesson.user.username %></button></p>
  </h4>
</div>

<div id="user-modal" class="modal">
  <!-- Modal content -->
  <div class="user-modal-content">
    <div class="modal-header">
      <span class="close">&times;</span>
      <h2>This is a header. We have got to change this color scheme.</h2>
    </div>
    <div class="modal-body">
      <p>For the love of god, please.</p>
      <p>We have to do something about this green</p>
    </div>
    <div class="modal-footer">
      <h3>Footer.</h3>
    </div>
  </div>
</div>

<br/>

<div class="container">

<p>
<%= @lesson.body %>
</p>

</div>

<div class="comment-section container">
  <h3>Comments</h3>

  <% if logged_in? %>
    <%= form_with model: @comment do |f| %>
      <%= f.text_area :text, class:"comment-text"%>
      <%= f.submit "Publish", class: "publish-btn btn" %>
    <% end %>
  <% end # if logged_in? %>
  <br/>
  <div class="comments-container container">
    <% @lesson.comments.each do |comment| %>
    <div class="comment-container container">
      <strong><%= comment.user.username %></strong>: <%= comment.text %>
    </div>
    <% end %>
  </div>
</div>
