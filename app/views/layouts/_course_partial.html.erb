<%= link_to course, class:"card-link" do %>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title"> <%= course.title %> </h2>
            
            <h6 class="card-subtitle mb-2 text-muted"> <%= course.user.username %> </h2>
            <p class="card-text"><%= course.description %></p>
        </div>
    </div>
<% end %>