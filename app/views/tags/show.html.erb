<body class="index">
  <p id="notice"><%= notice %></p>
  <%if @lessons.empty?%>
    <h1>No Lessons with <%=@tag.name%> tag</h1>
  <%else%>
    <h1>Lessons with tag: <%=@tag.name%></h1>

    <ul class="index">
      <%@lessons.each do |lesson| %>
        <li>
        <%= render :partial => "layouts/lesson_partial", :locals => { :lesson => lesson } %>
        </li>
      <% end %>
    </ul>
  <%end%>

  <%if @courses.empty?%>
    <h1>No Courses with <%=@tag.name%> tag</h1>
  <%else%>
    <h1>Courses with tag: <%=@tag.name%></h1>

    <ul class="index">
      <%@courses.each do |course| %>
        <li>
        <%= render :partial => "layouts/course_partial", :locals => { :course => course } %>
        </li>
      <% end %>
    </ul>
  <%end%>
  <br>

  <%= link_to 'Tags', "/tags" %>
</body>

