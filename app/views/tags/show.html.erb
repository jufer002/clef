<center>
    <div class="center jumbotron">
        <h1>Tags</h1>
        <br />
    </div>


    <h4><i>Showing results for <%=@tag.name%> tag</i></h4>

    <div class="search-results container-fluid">
        <div class="lesson-results container-fluid">
            <div class="user-lessons container-fluid">
                <span class="btn btn-secondary" data-toggle="tooltip" data-placement="bottom"
                    title="Lessons with <%=@tag.name%> tag">
                    <h2>Lessons found</h2><%= image_tag("info.jpg", :alt => "Info" ) %>
                </span>
                <br>
            </div>
            <hr>

            <ul class="index">
                <% if @lessons.empty? %>
                No lessons match those search terms
                <% else %>
                <% @lessons.each do |result| %>
                
                <li><%= render :partial => "layouts/lesson_partial", :locals => { :lesson => result } %></li>
                <% end %>
                <% end %>
            </ul>
            
        </div>


        <div class="container-fluid">

            <span class="btn btn-secondary" data-toggle="tooltip" data-placement="bottom"
                title="Courses with <%=@tag.name%> tag">
                <h2>Courses found</h2><%= image_tag("info.jpg", :alt => "Info" ) %>
            </span>

            <br>
            <hr>
            <ul class="index">
                <% if @courses.empty? %>
                No courses match those search terms
                <% else %>
                <% @courses.each do |result| %>
                <li>
                <li><%= render :partial => "layouts/course_partial", :locals => { :course => result} %></li>
                </li>
                <% end %>
                <% end %>
            </ul>
            <hr>
        </div>
    </div>
</center>

<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>




