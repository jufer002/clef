<body class="index">
  <p id="notice"><%= notice %></p>

  Lessons with tag: <h1><%=@tag.name%></h1>

  <table class="index">
    <tbody>
      <% if @lessons.empty? %>
        No lessons match that tag
      <% else %>
      <% @lessons.each do |lesson| %>
        <tr>
          <%= render :partial => "layouts/lesson_partial", :locals => { :lesson => lesson } %>
        </tr>
      <% end %>
      <% @courses.each do |course| %>
        <tr>
          <%= render :partial => "layouts/course_partial", :locals => { :course => course } %>
        <tr>
      <% end %>
      <% end %>
    </tbody>
  </table> 

  <br>

  <%= link_to 'Tags', "/tags" %>
</body>

