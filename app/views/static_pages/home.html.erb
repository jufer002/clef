<%= render 'layouts/header' %>

<div class="center jumbotron">
  <h1>Clef</h1>

  <h2>
    Welcome message!
  </h2>

  <br />
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h3>Recent Lessons</h3>
      <hr>
      <br />
      <ul class="list-unstyled">
        <% recent_lessons(5).each do |lesson| %>
          <li>
            <h4 id="lesson-title"><%= link_to lesson.title, lesson%></h4>
            <h5>by: <%= lesson.user.username %></h5>
            <%= lesson.body %>
          </li>
          <br />
        <% end %>
      </ul>
    </div>
    <div class="col-xs-6">
      <h3>Recent Courses</h3>
      <hr>
      <br />
      <ul class="list-unstyled">
        <% recent_courses(5).each do |course| %>
          <li>
            <h4><%= course.title %></h4>
            <h5>by: <%= course.user.username %></h5>
            <%= course.description %>
          </li>
          <br />
        <% end %>
      </ul>
    </div>
  </div>
</div>
