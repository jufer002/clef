<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: course, local: true do |f| %>
      <% if course.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

          <ul>
            <% course.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <h3>Create a new course</h3>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>

      <br />

      <%=
        render 'course_viewer',
          course: @course,
          no_progress: true,
          new_course: true,
          f: f
      %>

      <br/>
      <%= render :partial => "layouts/add_tag", :locals => { :f => f } %>

      <input name="commit" value="Publish Course" class="btn form-btn" id="submit-course" data-disable-with="Publish Course">

      <%#= need type="submit"  above f.submit "Publish Course", class: "btn form-btn", id: "submit-course" %>
      <br />
    <% end %>
  </div>
</div>
